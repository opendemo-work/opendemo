  "difficulty": "advanced",
  "estimated_time": "20-25 hours",
  "compatibility": {
    "kubernetes": ["v1.23.x", "v1.24.x", "v1.25.x", "v1.26.x", "v1.27.x", "v1.28.x", "v1.29.x"],
    "gpu": ["nvidia-a100", "nvidia-h100", "nvidia-l4"],
    "cuda": ["11.7", "11.8", "12.0", "12.1"]
  },
